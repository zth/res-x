{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "rescript-x",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "lib": ["ES2022", "DOM"],
    "types": ["bun-types"]
  },
  "include": ["src/**/*", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
