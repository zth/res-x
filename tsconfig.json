{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "rescript-x",
    "baseUrl": ".",
    "paths": {},
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "lib": ["ES2022", "DOM"],
    "types": ["bun-types"]
  },
  "include": ["test/**/*.ts", "test/**/*.tsx", "src/**/*.d.ts"],
  "exclude": ["node_modules", "demo", "benchmark"]
}

